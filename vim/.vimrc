"TAB SETTINGS"
set shiftwidth=4
set softtabstop=4
set expandtab

"FEATURES"
filetype plugin indent on
syntax on
set number
set nocompatible

"RECOMMENDED OPTIONS"
set wildmenu
set showcmd
set hlsearch

"USABILITY OPTIONS"
set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set nostartofline
set ruler
set cmdheight=2
set notimeout ttimeout ttimeoutlen=200

"KEYMAPPINGS"
noremap ; : 
inoremap jk <ESC>
